extends layout

block content
  h1.text-center.text-dark.mt-5.font-weight-bold= title

  if (toShow == null)
    h2.text-center.text-muted.mt-3 No details available for this heritage site
  else
    - let siteId = toShow._id
    - let siteName = toShow.site_name
    - let siteLocation = toShow.location
    - let yearEstablished = toShow.year_established

    div.container.mt-5
      div.card.shadow-lg.border-success
        div.card-header.bg-success.text-white
          h3.text-center Heritage Site Details
        div.card-body
          div.row
            div.col-md-6.mb-3
              strong Site ID:
              p.text-muted #{siteId}
            div.col-md-6.mb-3
              strong Site Name:
              p.text-muted #{siteName}
            div.col-md-6.mb-3
              strong Location:
              p.text-muted #{siteLocation}
            div.col-md-6.mb-3
              strong Year Established:
              p.text-muted #{yearEstablished}
        div.card-footer.text-center
          a.btn.btn-outline-success.btn-lg(href='/heritageSites') Back to List
